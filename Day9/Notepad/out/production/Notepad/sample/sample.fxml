   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem fx:id="newItem" mnemonicParsing="false" onAction="#onNew" text="New" />
